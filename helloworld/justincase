  $('#register').on('click', function () {
    newUser = $("#newUserInput").val();
    newPassword = $("#newpasswordInput").val();
    alert(newPassword);

    var newUserAndPass = new Object();
    newUserAndPass.username = newUser;
    newUserAndPass.password = newPassword;

    var newjsonString = JSON.stringify(newUserAndPass);
    alert(newjsonString);
     $.ajax({
    type: "POST",
    async:false,
    url: "http://127.0.0.1:5000/signup/"+newjsonString,
            success: function (msg) {
              // if we have a successful login, we know because the python controller returns a YES
              if (msg == "exists")
              {
                alert("Username already exists, please enter a unique username");
                // setting a cookie with the username and password, and having it expire in two days
                // only upon a succesfull login

                //setCookie(uname,password,2);
              }

              else if (msg == "Success!")
              {
                alert("Registration succesful!, try logging in with that account!");
              }


               //do something
            },
            error: function (errormessage) {
              alert("An error occured :(");

                //do something else

            }
    })




  });


});
 





